# Use official Python image
FROM python:3.10-slim
# Set working directory
WORKDIR /app

# Copy files
COPY . .

# Install dependencies
RUN pip install --upgrade pip
RUN pip install streamlit
RUN pip install numpy pandas scipy
RUN pip install langchain langchain-core langchain-community
RUN pip install langchain-openai langchain-huggingface langchain-text-splitters
RUN pip install sentence-transformer

# Expose Streamlit port
EXPOSE 8501

# Run the app

CMD ["streamlit", "run", "yashchatbot.py","yash_resume.txt"] 

